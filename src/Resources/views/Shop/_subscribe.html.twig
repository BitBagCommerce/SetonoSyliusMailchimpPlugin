        <button title="{{ 'setono_sylius_mailchimp_plugin.ui.subscribe' }}" type="submit" class="ui button">
            {{ 'setono_sylius_mailchimp_plugin.ui.subscribe'|trans }}
        </button>
    </div>
</form>
