    <div class="success-element"></div>
    <div class="validation-element"></div>
    <div class="inline field">
        <input type="text" id="setono-newsletter-email" name="email" placeholder="{{ 'setono_sylius_mailchimp_plugin.ui.your_email_address'|trans }}"/>
